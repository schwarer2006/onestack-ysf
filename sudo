#!/bin/bash
# ==================================================================
# ğŸ“„ Script      : /usr/local/bin/ossecure
# ğŸ” Zweck       : Sichere OneStack-Shell mit Session-Tracking
# ğŸ‘¤ Autor       : OneStack System
# ğŸ”§ Version     : 0.1.0
# ğŸ“… Erstellt    : 2025-04-13
# ğŸ“ Voraussetzung: /opt/onestack-ysf, venv, role_checker
# ==================================================================

SECURE_MENU="/opt/onestack-ysf/scripts/onestack_secure_menu.sh"
LOGFILE="/opt/onestack-ysf/logs/sessions.log"

read -p "ğŸ‘¤ Benutzer: " USERNAME
read -s -p "ğŸ”‘ Passwort: " PASSWORD
echo ""

# ğŸ§  Rollenname aus Username ableiten (z.â€¯B. dev2006 â†’ dev)
ROLE="${USERNAME//2006/}"

# ğŸ” Validierung Ã¼ber Passwort-Datei (vereinfachte Variante)
if [[ "$PASSWORD" != "ubuntu2006" ]]; then
  echo "â›” Falsches Passwort!"
  exit 1
fi

# ğŸ“¦ Python venv aktivieren
source /home/$USERNAME/venv/onestack/bin/activate

# ğŸŒ Session-ID generieren & in den RAM schreiben
SESSION_ID=$(uuidgen)
echo "$SESSION_ID" > "/dev/shm/onestack_session_${USERNAME}"

# ğŸ”§ Exportieren als Umgebungsvariable
export ONESTACK_USER="$USERNAME"
export ONESTACK_ROLE="$ROLE"
export ONESTACK_SESSION_ID="$SESSION_ID"
export ONESTACK_SECURE_MODE=1

# ğŸ“ Logeintrag
echo "$(date +%Y-%m-%dT%H:%M:%S) | SECURE LOGIN | $USERNAME | ROLE=$ROLE | SESSION=$SESSION_ID" >> "$LOGFILE"

# ğŸ› Sicheres MenÃ¼ starten
if [[ -x "$SECURE_MENU" ]]; then
  bash "$SECURE_MENU"
else
  echo "âš ï¸ Sicheres MenÃ¼ nicht gefunden: $SECURE_MENU"
fi
